<!DOCTYPE html>
<html>
<head>
    <title>Employee Management</title>



</head>
<body>
    <h1>Employee Management</h1>
    <button type="button" class="btn btn-outline-primary m-4" id="openFormButton">Add Employee</button>
    <table class="table table-hover" id="employeeTable" border="1">
        <thead class="btn-outline-dark">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Department</th>
                <th>Designation</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="IdForAppendingRowsInsideTable">
            <!-- Table rows will be populated here using jQuery AJAX -->
        </tbody>
       @* <tbody>
            @foreach (var employee in Model.EmployeeList)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Department</td>
                    <td>@employee.Designation</td>
                    <td>
                        <button class="btnEdit btn btn-outline-primary" data-id="@employee.Id"><i class="fa fa-edit"></i></button>
                        <button class="btnDelete btn btn-outline-danger " data-id="@employee.Id"><i class="fa fa-trash-o"></i></button>

                    </td>
                </tr>
            }
        </tbody>*@
    </table>


    @*----------------------right side-------------------------------*@
    <!-- Add a button or link to trigger the form display -->
    @* <button id="openFormButton">Open Form</button>*@

    <!-- The modal container -->

        <div id="modalContainer" class="modal-container">
            <!-- The form content -->
            <div class="modal-content">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <h4>Enter Employee Details</h4>
                            <!-- Your form elements go here -->

                        <form id="myForm" method="post">
                            @Html.AntiForgeryToken()
                            
                                 <!-- Name input -->
                                @* <input type="hidden" asp-for="Emp.Id" />*@
                                <div class="col-md-6  pb-2 pt-2">
                                    <label asp-for="Emp.FirstName" style="font-weight:bold;"></label>
                                    <input type='text' class='form-control' asp-for="Emp.FirstName" />
                                    <span class="alert-danger" asp-validation-for="Emp.FirstName"></span>
                                </div>
                                <div class="col-md-6  pb-2">
                                    <label asp-for="Emp.LastName" style="font-weight:bold;"></label>
                                    <input type='text' class='form-control' asp-for="Emp.LastName" />
                                    <span class="alert-danger" asp-validation-for="Emp.LastName"></span>
                                </div>
                                <div class="col-md-6  pb-2">
                                    <label asp-for="Emp.Department" style="font-weight:bold;"></label>
                                    <input type='text' class='form-control' asp-for="Emp.Department" />
                                    <span class="alert-danger" asp-validation-for="Emp.Department"></span>
                                </div>
                                <div class="col-md-6  pb-2">
                                    <label asp-for="Emp.Designation" style="font-weight:bold;"></label>
                                    <input type='text' class='form-control' asp-for="Emp.Designation" />
                                    <span class="alert-danger" asp-validation-for="Emp.Designation"></span>
                                </div>

        
                                <!-- Submit button -->
                                <button class="btn btn-outline-primary w-25 " id="btnSave" type="submit">Submit</button>
                                <button class="btn btn-outline-primary w-25 " id="btnUpdate" type="submit" disabled>Update Now</button>
                                <button class="btn btn-outline-warning w-25 " type="button" id="closeFormButton">Close</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>


    @*----------------------confirmation-------------------------------*@
    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">Delete Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this employee?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/crud.js"></script>
    <script src="~/js/openform.js"></script>
    <link href="~/css/openform.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    
    @*    <link href="~/css/rightslidetab.css" rel="stylesheet" />
    <script src="~/js/rightslidetab.js"></script>*@
</body>
</html>
