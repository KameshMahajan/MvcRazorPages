@page
@using RazorProject.Pages.Employeepage;
@model EmployeeModel
@{

    ViewData["Title"] = "Our Employees! ";
    
}

<script>
    function myFunction(x) {
        $("#item_view").modal();
    };
    $(document).ready(function () {
        $("#success-alert").hide();
        $("#success-alert").fadeTo(2000, 500).slideUp(500, function () {
            $("#success-alert").slideUp(500);
        });
    });

</script>

<div class="container">
    <div class="mail-box">
        <aside class="lg-side">
            <div class="inbox-head">
                <h3>Razor Page CRUD Operation</h3>
            </div>
            <a class="btn btn-primary btn-sx pull-left" style="margin-top:20px;margin-bottom: 20px;" asp-page="/Employee/Add">
                <i class="glyphicon glyphicon-plus"></i> Add New Employee
            </a>
            <br />
            @{
                if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert alert-success" id="success-alert" style="margin-top: 40px;">
                        <button type="button" class="close" data-dismiss="alert">x</button>
                        <strong>@Model.Message ! </strong>
                    </div>
                }
            }

            <div class="inbox-body" style="margin-top:20px;">


                <table class="table table-striped">
                        <thead>
                        @*<tr class="unread table-secondary">
                           
                                <th class="view-message col-sm-3">FIRST NAME</th>
                                <th class="col-sm-2">LAST NAME</th>
                                <th class="view-message  text-left col-sm-2">DEPARTMENT</th>
                                <th class="col-sm-1">DESIGNATION</th>
                            <th class=" view-message  ">Action</th>
                            </tr>
                        </thead>*@
                    <tr>
                            <th scope="col">FIRST NAME</th>
                            <th scope="col">LAST NAME</th>
                            <th scope="col">DEPARTMENT</th>
                            <th scope="col">DESIGNATION</th>
                            <th scope="col">Action</th>
                    </tr>
                        <tbody>
                            @foreach (var item in Model.EmployeeList)
                            {
                                <tr>
                                    @*<td onclick="myFunction(this)" class="view-message  dont-show"><h5>@item.Id</h5></td>*@
                                    <td onclick="myFunction(this)" class="view-message"><h5>@item.FirstName</h5></td>
                                    <td onclick="myFunction(this)" class="view-message"><h5>@item.LastName</h5></td>
                                    <td onclick="myFunction(this)" class="view-message"><h5>@item.Department</h5></td>
                                    <td onclick="myFunction(this)" class="view-message"><h5>@item.Designation</h5></td>
             
                                    <td>
                                        <form method="post">
                                            <span class="btn " >
                                                <a class="btn btn-primary " asp-page="/Employee/Edit" asp-route-id="@item.Id" ;">
                                                   Edit
                                                </a>

                                                <button type="submit" class="btn btn-danger  " asp-page-handler="Delete" asp-route-id="@item.Id" ;"
                                                        onclick="return confirm('Are you sure to delete this product?');">
                                                   Delete
                                                </button>

                                            </span>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                
            </div>
        </aside>
    </div>
</div>
